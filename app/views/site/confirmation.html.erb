<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Jahrgang</th>
      <th>Geschlecht</th>
      <th>Strasse</th>
      <th>PLZ</th>
