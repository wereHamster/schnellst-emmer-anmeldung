  </thead>


  <tbody>
    <% @athletes.order("id ASC").each do |athlete| %>
    <tr>
      <td><%= athlete.first_name %></td>
      <td><%= athlete.last_name %></td>
      <td><%= athlete.birth_cohort %></td>
      <td><%= athlete.sex_long %></td>
      <td><%= athlete.street %></td>
      <td><%= athlete.postcode %></td>
    </tr>
    <% end %>
  </tbody>
</table>
